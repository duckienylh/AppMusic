<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paris_4"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textviewTile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="Tên bài hát"
        android:textColor="#000"
        android:textSize="24dp"
        android:gravity="center"/>

    <ImageButton
        android:id="@+id/imageButtonPrev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="52dp"
        android:layout_marginLeft="52dp"

        android:layout_marginBottom="11dp"
        android:src="@drawable/ic_action_name" />

    <ImageButton
        android:id="@+id/imageButtonPlay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="147dp"
        android:layout_marginLeft="147dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/ic_action_play" />

    <ImageButton
        android:id="@+id/imageButtonStop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="248dp"
        android:layout_marginLeft="248dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/ic_action_name" />

    <ImageButton
        android:id="@+id/imageButtonNext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="331dp"
        android:layout_marginLeft="331dp"
        android:layout_marginBottom="12dp"
        android:src="@drawable/ic_action_name" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="13dp"
        android:layout_above="@+id/imageButtonPrev"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/seekBarSong"/>

    <TextView
        android:layout_marginLeft="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#fff"
        android:text="00:00"
        android:textSize="20dp"
        android:layout_above="@+id/seekBarSong"
        android:layout_alignLeft="@+id/seekBarSong"
        android:layout_alignStart="@+id/seekBarSong"
        android:layout_marginBottom="12dp"
        android:id="@+id/textviewTimeSong"
        />

    <TextView
        android:layout_marginRight="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/seekBarSong"
        android:layout_alignStart="@+id/seekBarSong"
        android:layout_alignLeft="@+id/seekBarSong"
        android:layout_marginStart="341dp"
        android:layout_marginLeft="341dp"
        android:layout_marginBottom="12dp"
        android:text="00:00"
        android:textColor="#fff"
        android:textSize="20dp"
        android:id="@+id/textviewTimeTotal"
        />

    <ImageView
        android:id="@+id/imageViewDisc"
        android:layout_width="300dp"
        android:layout_height="300dp"
        android:layout_below="@+id/textviewTile"
        android:layout_marginLeft="45dp"
        android:layout_marginTop="46dp"
        app:srcCompat="@drawable/cd" />


</RelativeLayout>